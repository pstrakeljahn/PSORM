<?php

class {{ className }} {
    {%- for field in fields %}
    const {{ field|upper }} = '{{ field }}';
    {%- endfor %}

    const REQUIRED = [
        {%- for required in requiredFields %}
        '{{ required }}'{{ loop.last ? '' : ',' }}
        {%- endfor %}
    ];

    const API_READABLE = [
        {%- for readable in readableFields %}
        '{{ readable }}'{{ loop.last ? '' : ',' }}
        {%- endfor %}
    ];
}
